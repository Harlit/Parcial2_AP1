@page "/Verduras_consulta"
@inject VerduraBLL VerduraBLL

<EditForm Model="this">
    <div class="card">

        <div class="card-header">
            <h4>Consulta de Verduras</h4>
        </div>
    </div>
    <div class="card-body">
        <button @onclick="Buscar" class="btn btn-outline-primary"> <i class="oi oi-magnifying-glass" /> Buscar </button>
    </div>

    <table class="table table-striped table-hover mt-4" style="cursor: pointer;">

        <thead class="thead">
            <tr class="table">
                <th>VerduraId</th>
                <th>Nombre</th>
                <th>Fecha Creacion</th>
                <th>Observacion</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var verdura in verduras)
            {
                        <tr>
                            <td>@verdura.VerduraId</td>
                            <td>@verdura.Nombre</td>
                            <td>@verdura.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td>@verdura.Observacion </td>
                        </tr>
            }

        </tbody>
    </table>
</EditForm>

@code {
    public List<Verduras> verduras { get; set; } = new List<Verduras>();

    void Buscar()
    {
        verduras = VerduraBLL.GetList(p => true);
    }
}